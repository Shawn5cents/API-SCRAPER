# Environment Variables Template for Sylectus Monitor
# Copy this file to .env and fill in your actual credentials

# ===== REQUIRED CREDENTIALS =====

# Sylectus Configuration
# These are currently hardcoded in hybrid_scraper.py but should be moved to environment variables
SYLECTUS_CORPORATE_ID="your_corporate_id_here"
SYLECTUS_CORPORATE_PASSWORD="your_corporate_password_here"
SYLECTUS_USERNAME="your_username_here"
SYLECTUS_USER_PASSWORD="your_user_password_here"

# Alternative: Session Cookie (if you have an existing session)
SYLECTUS_COOKIE="your_session_cookie_here"
SYLECTUS_URL="https://www.sylectus.com/Main.aspx?page=II14_managepostedloads.asp?loadboard=True"

# Telegram Configuration (REQUIRED for notifications)
TELEGRAM_BOT_TOKEN="your_bot_token_here"
TELEGRAM_CHAT_ID="your_chat_id_here"

# Firecrawl Configuration (REQUIRED for MCP server)
FIRECRAWL_API_KEY="your_firecrawl_api_key_here"

# ===== OPTIONAL CONFIGURATION =====

# Load Filtering - DISABLED (Use manual Sylectus selections)
FILTER_STATE=""
MAX_DEADHEAD_MILES=99999

# System Configuration
CHECK_INTERVAL=120
DATA_DIR="/home/nichols-ai/sylectus-monitor/data"

# Browser Automation Settings
USE_PLAYWRIGHT=true
HEADLESS=true
STEALTH_MODE=true

# Performance Tuning
MAX_RETRIES=3
RETRY_DELAY=30

